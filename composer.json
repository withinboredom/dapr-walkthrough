{
    "name": "withinboredom/picker",
    "type": "project",
    "authors": [
        {
            "name": "Rob Landers",
            "email": "landers.robert@gmail.com"
        }
    ],
    "require": {
        "dapr/php-sdk": "dev-add/gprc"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "start": [
            "PHP_CLI_SERVER_WORKERS=10 dapr run --app-max-concurrency 10 -a dev -p 3000 -- php -S 0.0.0.0:3000 -t src"
        ],
        "start-prod": [
            "docker rm -f picker",
            "dapr run --app-max-concurrency 100 -a picker -p 3000 -- docker run -p 3000:3000 --name picker picker:latest"
        ],
        "build": [
            "docker build -t withinboredom/picker:latest .",
            "docker build -f images/Caddy.Dockerfile -t withinboredom/picker:caddy ."
        ]
    },
    "autoload": {
        "psr-4": {
            "Picker\\": "src"
        }
    }
}
